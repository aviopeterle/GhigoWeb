<tr id="proposta_recid_@Model.RecId">
    <td>@Model.CodiceArticolo</td>
    <td>@Model.Descrizione</td>
    <td class="center">@Model.Lotto</td>
    <td class="center">@DateTimeExt.ToGhigoShortDateString(Model.ScadenzaLotto)</td>
    <td class="right">@Model.Quantita</td>
    <td class="right">@Model.CostoNettoUnitario.ToString("N")</td>
    <td class="right">@Model.PrezzoVendita.ToString("N")</td>
    <td class="center">
        <button id="btnLibero_recid_@Model.RecId"
            class="small pop orange" 
            style="width: 80px"
            onclick="RimuoviLibero(@Model.RecId)">
            Rimuovi
        </button>
    </td>
</tr>
