<tr id="offerta_recid_@Model.RecId">
    <td>@Model.CodiceArticolo</td>
    <td id="Articolo_recid_@Model.RecId">@Model.Descrizione</td>
    <td id="DataScadenza_recid_@Model.RecId" class="center">@DateTimeExt.ToGhigoShortDateString(Model.DataScadenza)</td>
    <td>@Model.PrezzoFornitore.ToString("N")</td>
    <td>@(Model.PercentualeRicaricoFornitore)%</td>
    <td class="right" id="QuantitaRichiestaResidua_recid_@Model.RecId">@Model.QuantitaRichiestaResidua</td>
    <td class="right" id="QuantitaConfermata_recid_@Model.RecId">@Model.QuantitaConfermata</td>
    <td class="center">
        <button id="btnQuantitaOfferta_recid_@Model.RecId" 
            class="small pop @(Model.QuantitaRichiestaResidua <= 0 ? string.Empty : "green")" 
            style="width: 80px" @(Model.QuantitaRichiestaResidua <= 0 ? "disabled=\"disabled\"" : string.Empty)
            onclick="ApriDialog(@Model.RecId)">
            <span id="QuantitaOfferta_recid_@Model.RecId">@Model.QuantitaOfferta</span>
        </button>
        <input type="hidden" id="Lotto_recid_@Model.RecId" value="@Model.Lotto" />
        <input type="hidden" id="ScadenzaLotto_recid_@Model.RecId" value="@(Model.ScadenzaLotto == DateTime.Parse("01/01/1900") ? DateTimeExt.ToGhigoShortDateString(Model.DataScadenza) : DateTimeExt.ToGhigoShortDateString(Model.ScadenzaLotto))" />
    </td>
    @if (Roles.IsUserInRole("GestioneOrdiniFornitoriDeposito"))
    {
        <td>
            <button id="btnQuantitaDaOrdinare_recid_@Model.RecId"
                    class="small pop pink"
                    style="width: 80px"
                    onclick="ApriDialogQtaOrdinare(@Model.RecId)">
                <span id="QuantitaDaOrdinare_recid_@Model.RecId">@Model.QuantitaDaOrdinare</span>
            </button>
            <input type="hidden" id="PrezzoDaOrdinare_recid_@Model.RecId" value="@Model.PrezzoDaOrdinare" />
        </td>
    }
</tr>

