<tr id="ddt_recid_@Model.RecId">
    <td>@Model.NumeroDocumento</td>
    <td>@DateTimeExt.ToGhigoShortDateString(Model.DataDDT)</td>
    @if (!string.IsNullOrEmpty(Model.NumeroFattura))
    {
        <td>
            @Html.ActionLink((string)Model.NumeroFattura, "Index", "Fatture", routeValues: new { cerca = Model.NumeroFattura }, htmlAttributes: new { @class = "btn small pink" })
        </td>
    } else {
        <td>
            @Html.ActionLink("Crea", "NuovaFatturaPrivata_SceltaAnagrafica", "Fatture",
            routeValues: new { ddt_recid = Model.RecId, nota_accredito = false, numeroproposta = 0 }, htmlAttributes: new { @class = "btn small orange" })
        </td>
    }
    <td>
        <a id="btnPDF_recid_@Model.RecId" 
            class="btn small pop blue" 
            target="_blank"
            href="/Report/Print?stored=APP_SP_REPORT_DDT_TRASFERIMENTI_FORNITORI&rec_id=@Model.RecId">
            DDT
        </a>
        <a id="btnBarcode_recid_@Model.RecId" 
            class="btn small pop blue" 
            target="_blank"
            href="/Report/Print?stored=APP_SP_REPORT_DDT_TRASFERIMENTI_FORNITORI_MODULOBARCODES&rec_id=@Model.RecId">
            Barcodes
        </a>
    </td>
</tr>

