<div class="right">
    <form method="get">
        <label for="txtCerca">Cerca</label>
        <input class="small" id="txtCerca" name="cerca" type="text" placeholder="Numero" style="width: 200px"/>
        <input type="submit" value="Cerca" />
    </form>
</div>

    <table class="striped tight" id="tabellaOfferte">
        <thead>
            <tr>
                <th>Numero</th>
                <th>Data</th>
                <th>Consegna</th>
                <th>Stato</th>
                <th>Pagamento</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
@foreach (var item in Model) {
    @Html.Partial("_OfferteClientePartial", item)
}
          </tbody>
    </table>

